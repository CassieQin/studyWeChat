/* pages/classification/classification.wxss */

.content {
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
}

.c-item:first-child {
    width: 25%;
    margin-right: 20rpx;
    background: #efefef;
}

.c-item:last-child {
    width: 75%;
    overflow: auto;
}

.c-title-list {
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #e9e9e9;
    color: #666;
}

.c-title-list-active {
    background: #4796ff;
    color: #fff;
}

.types {
    display: flex;
    flex-direction: row;
    height: 160rpx;
    padding: 0 0 20rpx 0;
}

.type:first-child {
    width: calc(28% - 10rpx);
    margin-right: 10rpx;
    margin: 0 10rpx 20rpx 0;
    background: #efefef;
    text-align: center;
    line-height: 160rpx;
    color: #ddd;
}

.type:last-child {
    width: 72%;
    border-bottom: 1px solid #efefef;
    padding: 10rpx 0;
}
.type-name{
    color: #666;
    margin-bottom: 10rpx;
}
.type-summary{
    font-size: 12px;
    color: #999;
}
