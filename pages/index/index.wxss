/**index.wxss**/
.book {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: flex-start;
}
.book-item {
    width: calc(100%/3 - 40rpx);
    padding: 20rpx;
    height: 220rpx;
}
.book-infor {
    width: calc(100% - 40rpx);
    height: calc(100% - 40rpx);
    background: #fff;
    padding: 20rpx;
}
.book-name{
    height: 140rpx;
    color: #666;
}
.book-bg{
    font-size: 16px;
    color: #ccc;
    text-align: center;
}
.book-plus{
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 60px;
    background: #efefef;
    color: #ddd;
}